<Window x:Class="S3Mount.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="S3Mount - Log Viewer" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Style for the log text box -->
        <Style x:Key="LogTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- Button style -->
        <Style x:Key="LogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D5A8F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <StackPanel>
                <TextBlock Text="S3Mount Activity Log" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="White"
                          Margin="0,0,0,5"/>
                <TextBlock Name="LogPathText"
                          FontSize="11" 
                          Foreground="#999999"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#333337" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="?? Refresh" 
                        Style="{StaticResource LogButtonStyle}"
                        Click="RefreshButton_Click"
                        ToolTip="Reload log from file"/>
                
                <Button Content="??? Clear Log" 
                        Style="{StaticResource LogButtonStyle}"
                        Background="#C5221F"
                        Click="ClearButton_Click"
                        ToolTip="Clear all log entries"/>
                
                <Button Content="?? Open Log Folder" 
                        Style="{StaticResource LogButtonStyle}"
                        Click="OpenFolderButton_Click"
                        ToolTip="Open log folder in Explorer"/>
                
                <Button Content="?? Export..." 
                        Style="{StaticResource LogButtonStyle}"
                        Click="ExportButton_Click"
                        ToolTip="Export log to file"/>

                <Separator Margin="10,0" Width="1" Background="#555"/>

                <CheckBox Name="AutoScrollCheckBox"
                         Content="Auto-scroll" 
                         Foreground="White"
                         IsChecked="True"
                         VerticalAlignment="Center"
                         Margin="5,0"/>

                <CheckBox Name="LiveUpdateCheckBox"
                         Content="Live updates" 
                         Foreground="White"
                         IsChecked="True"
                         VerticalAlignment="Center"
                         Margin="15,0,5,0"
                         Checked="LiveUpdateCheckBox_Checked"
                         Unchecked="LiveUpdateCheckBox_Unchecked"/>

                <TextBlock Text="Filter:" 
                          Foreground="#999"
                          VerticalAlignment="Center"
                          Margin="15,0,5,0"/>
                
                <TextBox Name="FilterTextBox"
                        Width="200"
                        Background="#3F3F46"
                        Foreground="White"
                        BorderBrush="#555"
                        Padding="5"
                        TextChanged="FilterTextBox_TextChanged"
                        ToolTip="Filter log entries"/>
            </StackPanel>
        </Border>

        <!-- Log display -->
        <Border Grid.Row="2" 
                Background="#252526" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,0">
            <ScrollViewer Name="LogScrollViewer" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox"
                        Style="{StaticResource LogTextBoxStyle}"
                        IsReadOnly="True"
                        TextWrapping="NoWrap"
                        VerticalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Name="StatusText" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                
                <TextBlock Name="LineCountText" 
                          Grid.Column="1"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
