<Window x:Class="S3Mount.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S3Mount"
        mc:Ignorable="d"
        Title="S3 Mount Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with gradient accent -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="32,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}">
                        <Run Text="S3 Mount"/>
                        <Run Text="Manager" Foreground="{StaticResource AccentOrangeBrush}"/>
                    </TextBlock>
                    <TextBlock Text="Manage your S3 bucket mounts" 
                              FontSize="14" 
                              Foreground="{StaticResource SecondaryTextBrush}"
                              Margin="0,4,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Command="{Binding AddMountCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,12"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="Add Mount" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="32,24">
            <!-- Empty state -->
            <Border HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="60,50"
                    Visibility="{Binding Mounts.Count, Converter={StaticResource CountToVisConverter}}">
                <StackPanel MaxWidth="400">
                    <Border Background="{StaticResource TertiaryBackgroundBrush}"
                            CornerRadius="50"
                            Width="80" Height="80"
                            HorizontalAlignment="Center">
                        <TextBlock Text="📦" FontSize="40" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="No S3 Mounts Configured" 
                              FontSize="22" 
                              FontWeight="SemiBold" 
                              HorizontalAlignment="Center" 
                              Margin="0,20,0,8" 
                              Foreground="{StaticResource PrimaryTextBrush}"/>
                    
                    <TextBlock Text="Get started by configuring your first S3 bucket mount. Connect to AWS S3, Backblaze B2, or any S3-compatible storage provider." 
                              HorizontalAlignment="Center" 
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource SecondaryTextBrush}"
                              LineHeight="22"/>
                    
                    <Button Command="{Binding AddMountCommand}"
                           Style="{StaticResource PrimaryButton}"
                           Margin="0,24,0,0" 
                           Padding="24,14"
                           HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="Configure First Mount" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Mounts DataGrid -->
            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="{Binding Mounts.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
                <DataGrid ItemsSource="{Binding Mounts}"
                         SelectedItem="{Binding SelectedMount}"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="MOUNT NAME" Width="*" MinWidth="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding MountName}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding ProviderName}" 
                                                  FontSize="11" 
                                                  Foreground="{StaticResource TertiaryTextBrush}"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="BUCKET" Width="*" MinWidth="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding BucketName}" 
                                              Foreground="{StaticResource SecondaryTextBrush}"
                                              FontFamily="Consolas, Courier New"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="DRIVE" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource TertiaryBackgroundBrush}"
                                           BorderBrush="{StaticResource BorderBrush}"
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Padding="8,4"
                                           HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DriveLetter}" 
                                                  FontFamily="Consolas, Courier New"
                                                  FontWeight="Bold"
                                                  FontSize="13"
                                                  Foreground="{StaticResource AccentOrangeBrush}"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="AUTO MOUNT" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AutoMount, Converter={StaticResource YesNoConverter}}" 
                                              Foreground="{StaticResource SecondaryTextBrush}"
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="STATUS" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding IsMounted, Converter={StaticResource StatusColorConverter}}"
                                           CornerRadius="12" 
                                           Padding="12,6"
                                           HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding IsMounted, Converter={StaticResource StatusTextConverter}}" 
                                                  Foreground="White" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="11"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="ACTIONS" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="{Binding IsMounted, Converter={StaticResource MountButtonTextConverter}}" 
                                               Command="{Binding DataContext.ToggleMountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="{Binding IsMounted, Converter={StaticResource MountButtonColorConverter}}"
                                               Foreground="White"
                                               Style="{StaticResource ModernButton}"
                                               Margin="4,0" 
                                               Padding="12,6" 
                                               MinWidth="85"/>
                                        
                                        <Button Content="Edit" 
                                               Command="{Binding DataContext.EditMountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="{StaticResource AccentBlueBrush}"
                                               Foreground="White"
                                               Style="{StaticResource ModernButton}"
                                               Margin="4,0" 
                                               Padding="12,6"
                                               MinWidth="70"/>
                                        
                                        <Button Content="Delete" 
                                               Command="{Binding DataContext.DeleteMountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="{StaticResource ErrorBrush}"
                                               Foreground="White"
                                               Style="{StaticResource ModernButton}"
                                               Margin="4,0" 
                                               Padding="12,6"
                                               MinWidth="70"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- Footer Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource TertiaryBackgroundBrush}"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,6"
                           Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total:" 
                                      Foreground="{StaticResource SecondaryTextBrush}" 
                                      Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Mounts.Count, Mode=OneWay}" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{StaticResource TertiaryBackgroundBrush}"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,6">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                    Fill="{StaticResource SuccessBrush}"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Active:" 
                                      Foreground="{StaticResource SecondaryTextBrush}" 
                                      Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Mounts, Converter={StaticResource ActiveMountsCountConverter}, Mode=OneWay}" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource SuccessBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="📋 View Logs" 
                           Background="{StaticResource AccentBlueBrush}"
                           Foreground="White"
                           Style="{StaticResource ModernButton}"
                           Margin="12,0,0,0" 
                           Padding="12,6"
                           Click="ViewLogsButton_Click"
                           ToolTip="View application activity logs"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                          Text="💡 Minimize to system tray" 
                          FontStyle="Italic" 
                          Foreground="{StaticResource TertiaryTextBrush}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#CC0F1419" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                   BorderBrush="{StaticResource BorderBrush}"
                   BorderThickness="1"
                   CornerRadius="12" 
                   Padding="40,32" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Processing..." 
                              FontSize="16" 
                              Margin="0,16,0,0" 
                              HorizontalAlignment="Center"
                              Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
